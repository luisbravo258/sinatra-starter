
<!-- BREADCRUMB -->
<section id='breadcrumb'>
  Image
</section>
<!-- BREADCRUMB -->

<section id='comment_image'>
  <div class='container container-padding'>
    <img class='img-show' src='<%= @image.image.url %>' />
  </div>
</section>

<!-- BREADCRUMB -->
<section id='breadcrumb'>
    Comments
</section>
<!-- BREADCRUMB -->

<section id='comments'>
  <div class='container container-padding'>
  <div class='row'>
    <div class='col-sm-4'>

      <form method="POST">

        <div class='form-group'>
          <label for="">Name</label>
          <input type="text" name="comment[commenter]" class='form-control' />
        </div>

        <div class='form-group'>
          <label for="">Comment</label>
          <textarea name="comment[comment]" class='form-control' rows=8></textarea>
        </div>

        <button type='submit' class='btn btn-block btn-default'>
          <i class='fa fa-comment'></i>
          Comment
        </button>

      </form>

    </div>
    <div class='col-sm-8'>

      <div class="blog-comment">

          <% if @image.comments.size != 0 %>
              <ul class="comments">
                  <% @image.comments.each do | current_comment | %>
                  <li class="clearfix">
                      <img alt="" class="avatar" src="http://bootdey.com/img/Content/user_1.jpg">
                      <div class="post-comments">
                          <p class="meta">
                            <i class='fa fa-clock-o'></i>
                            <%= current_comment.created_at.strftime("%b, %d %Y %H:%M") %> <br />
                              <strong><%= current_comment.commenter %></strong>
                              says :
                          </p>
                          <p>
                              <%= current_comment.comment %>
                          </p>
                      </div>
                  </li>
                  <% end %>
              </ul>
          <% else %>

              <p class='lead text-center'>
                  There a no comments, be the first <br />
                  <i class='fa fa-comment' style='font-size:90px'></i>
              </p>

          <% end %>


      </div>

    </div>
  </div>
</div>
</section>
